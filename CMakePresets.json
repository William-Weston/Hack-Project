         "inherits": [
            "conf-debug-base",
            "conf-gcc14-base",
            "conf-vcpkg-base"
         ]
      },
      {
         "name": "conf-clang17-debug-vcpkg",
         "displayName": "Clang-17 Debug (VCPKG)",
         "description": "Unix-like clang-17 debug with vcpkg toolchain",
         "inherits": [
            "conf-debug-base",
            "conf-clang17-base",
            "conf-vcpkg-base"
         ]
      },
      {
         "name": "conf-clang18-debug-vcpkg",
